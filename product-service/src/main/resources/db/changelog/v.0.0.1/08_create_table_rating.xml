<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_table_rating" author="ggrigorov">
        <createTable tableName="rating">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="product_id" type="varchar(36)"/>
            <column name="score" type="double"/>

            <!-- mandatory audit columns -->
            <column name="created_by" type="varchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="add_fk_rating_to_product" author="ggrigorov">
        <addForeignKeyConstraint baseTableName="rating"
                                 baseColumnNames="product_id"
                                 constraintName="fk_rating_to_product"
                                 referencedTableName="product"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="rating_sequence_generator" author="ggrigorov">
        <createSequence sequenceName="rating_sequence_generator"
                        startValue="1000"
                        incrementBy="1"/>
    </changeSet>
</databaseChangeLog>