<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_table_city" author="ggrigorov">
        <createTable tableName="city">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>

            <!-- mandatory audit columns -->
            <column name="created_by" type="varchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="city_sequence_generator" author="ggrigorov">
        <createSequence sequenceName="city_sequence_generator"
                        startValue="1000"
                        incrementBy="1"/>
    </changeSet>

    <changeSet id="load_data_to_city_table" author="ggrigorov">
        <loadData file="db/changelog/data/01_add_predefined_cities.csv"
                  separator=";"
                  tableName="city">
            <column name="id" type="bigint" />
            <column name="name" type="varchar(255)" />
        </loadData>
    </changeSet>

    <changeSet id="update_auditing_fields_to_city" author="ggrigorov">
        <sql>
            -- Set created_by for null values
            UPDATE city SET created_by = 'system' WHERE created_by IS NULL;

            -- Set created_by for null values
            UPDATE city SET created_date = current_timestamp WHERE created_date IS NULL;

            -- Set last_modified_by for all rows
            UPDATE city SET last_modified_by = 'system' WHERE last_modified_by IS NULL;

            -- Set last_modified_by for all rows
            UPDATE city SET last_modified_date = current_timestamp WHERE last_modified_date IS NULL;
        </sql>
    </changeSet>

</databaseChangeLog>
