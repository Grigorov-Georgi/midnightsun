<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_table_product" author="ggrigorov">
        <createTable tableName="product">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="customer_email" type="varchar(255)"/>
            <column name="status" type="varchar(255)"/>
            <column name="type" type="varchar(255)"/>
            <column name="product_id" type="bigint"/>
            <column name="city_id" type="bigint"/>
            <column name="street" type="varchar(255)"/>
            <column name="postal_code" type="bigint"/>

            <!-- mandatory audit columns -->
            <column name="created_by" type="varchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="add_fk_city_to_order" author="ggrigorov">
        <addForeignKeyConstraint baseTableName="order"
                                 baseColumnNames="city_id"
                                 constraintName="fk_order_to_city"
                                 referencedTableName="city"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="product_sequence_generator" author="ggrigorov">
        <createSequence sequenceName="product_sequence_generator"
                        startValue="1000"
                        incrementBy="1"/>
    </changeSet>
</databaseChangeLog>
